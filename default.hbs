    {{!-- jQuery insertar antes de `{{ghost_foot}}` para que jQuery pueda ser utilizado en la inyección de código --}}
    <script type="text/javascript" src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    {{!-- Ghost genera scripts y datos importantes con esta etiqueta --}}
    {{ghost_foot}}
    {{!-- Archivo JavaScript principal para 01luisrene --}}
    <script async src="{{asset "js/app.min.js"}}" type="text/javascript"></script>
    {{!-- Agregando CSS dinámicamente --}}
    <script>
      (function(){
        document.addEventListener('DOMContentLoaded', css, false);
        function css() {
          cargarCSS('{{asset "css/screen.css"}}');
          cargarCSS('{{asset "css/vendor.css"}}');
          cargarCSS('//use.fontawesome.com/40d6f03eee.css');
          cargarCSS('//fonts.googleapis.com/css?family=Noto+Sans:400,700');
          cargarCSS('//fonts.googleapis.com/css?family=Lato:300,400,700');
        }
        function cargarCSS(href) {
          'use strict';
          var css = window.document.createElement('link');
          var ref = document.querySelector('head').lastChild;
          css.rel = 'stylesheet';
          css.type = 'text/css';
          css.href = href;
          css.media = 'all';
          ref.parentNode.insertBefore(css, ref);
          return css;
        }
      })();
    </script>
    {{!-- Solo carga para los posts --}}
    {{#is "post"}}
        {{> "scriptsPost"}}
    {{/is}}
    {{!-- Solo carga para las páginas --}}
    {{#is "page"}}
      {{> "ultimosPost"}}
    {{/is}}
    {{!-- Carga para los posts y páginas --}}
    {{#is "post, page"}}
    {{!-- ADDTHIS --}}
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-57004124cf559f51"></script>
    {{/is}}
