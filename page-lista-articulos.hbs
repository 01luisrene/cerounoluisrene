{{!< default}}
<main class="content" role="main">
<div class="wrapper inner-post">
<article class="{{post_class}}">
	{{#post}}
    <header class="page-header">
        <h1 class="post-title">{{title}}</h1>
        {{#if image}}
            <img src="{{image}}" alt="imagen - {{title}}">
        {{/if}}
    </header>
	  <section class="post-content">
	      {{content}}
	  </section>
	{{/post}}
</article>
{{> "aside"}}
</div>
</main>
