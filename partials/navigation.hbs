  <nav class="main-menu">
      <a class="fa ion-close icon-cerrar" href="#" id="js_icon_cerrar" title="Cerrar"></a>
      <span><img class="logo-menu-mobile" src="{{asset "images/logo.png"}}" alt="Logo"></span>
     <ul class="menu-mobile-list">
        {{#foreach navigation}}
            <li class="item nav-{{slug}}" role="presentation">
