 <!-- Header principal -->
<header id="header" class="site-header headroom">
  <div class="content__nav wrapper">
    <figure class="figure-logo" id="js_img_logo">
      <a href=""><img src="{{ asset "images/logo.png"}}" alt="01luisrene.com" title="01luisrene.com"></a>
    </figure>
    <nav class="nav">
      <ul class="nav-list">
        {{#foreach navigation}}
            <li class="lista-item nav-{{slug}}" role="presentation">
            {{#if current}}
              {{#is "index"}}
                <span class="home link">{{label}}</span>
              {{else}}
                <span class="active link">{{label}}</span>
              {{/is}}
            {{else}}
              <a class="link" href="{{url absolute="true"}}">
               {{label}}
              </a>
            {{/if}}
            </li>
        {{/foreach}}
        <li class="lista-item">
          {{#if @labs.subscribers}}
              <a class="subscribe-button link" href="{{@blog.url}}/subscribe/">Subscribe</a>
          {{else}}
              <a class="link-menu link" href="http://eepurl.com/bX5zC9" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
              <small>Subscribe</small>
            </a>
          {{/if}}
        </li>
      </ul>
      
    </nav>
    <div class="icons-box">
      <a href="/lista-articulos" class="icon-buscador ion-search" title="Buscador" id="js_icon_buscador"></a>
      <a href="javascript:void(0)" class="icon-menu" id="js_icon_menu">
        <span class="ico"></span>
      </a>
    </div>
  </div>
</header>

<!-- Menú web mobile -->
