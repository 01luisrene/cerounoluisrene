              {{else}}
                <span class="active link">{{label}}</span>
              {{/is}}
            {{else}}
              <a class="link" href="{{url absolute="true"}}">
               {{label}}
              </a>
            {{/if}}
            </li>
        {{/foreach}}
       <li class="item">
         {{#if @labs.subscribers}}
              <a class="subscribe-button link" href="{{@blog.url}}/subscribe/">Subscribe</a>
          {{else}}
              <a class="link" href="http://eepurl.com/bX5zC9" onclick="window.open(this.href, 'mywin', 'left=20,top=20,width=500,height=500,toolbar=1,resizable=0'); return false;">
              <small>Subscribe</small>
            </a>
          {{/if}}
       </li>
     </ul>
  </nav>
</div>