	    type: 'image',
			closeOnContentClick: true,
			mainClass: 'mfp-img-mobile',
	    image: {
	      verticalFit: true,
	      titleSrc: function(item) {
	        return '<a class="mf-link" href="'+item.src+'" target="_blank">Abrir imagen original</a>';
	      }
	    },
	    zoom: {
				enabled: true,
				duration: 300
			}
  	});
    $(".ultimos-post").rss("https://01luisrene.com/rss/",
    {
      entryTemplate:'<li><a href="{url}">{title}</a></li>',
      limit: 15,
      ssl: true
    });
  });
</script>
