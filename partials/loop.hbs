{{!-- Loop Posts --}}
<section class="___articulos___ flex-sa-wrap">
{{#foreach posts}}
{{!-- Primer Articulo --}}
  <article {{#if @first}}class="first-post" {{#if image}}style="background-image: url({{image}})"{{/if}} {{#if tags}}data-tag="{{#foreach tags limit="1"}}{{name}}{{/foreach}}"{{/if}}{{else}}class="{{post_class}}"{{/if}}>
  {{#if @first}}
    <header>
      <a class="post-vinculo" href="{{url}}">
        <h2 class="post-titulo">
          {{title}}
        </h2>
      </a>
    </header>
    <section class="post-extracto">
      <p>{{excerpt words="40"}}[...]</p>
    </section>
    <footer class="post-footer">
      <span class="flex-center">
        {{#author}}
          {{#if image}}
          <img src="{{image}}" alt="{{name}}'s Picture" />
          {{/if}}
          <small>&nbsp;<a href="{{url}}">{{name}}</a>&nbsp;</small> 
        {{/author}} 
        <time class="flex-center" datetime="{{date format="YYYY-MM-DD"}}"><span class="icon-clock"></span>&nbsp;<small>{{date published_at timeago="true"}}</small></time>
      </span>
    </footer>

  {{else}}
    {{!-- Segundo articulo al N --}}
    <header class="post-header">
      <a class="post-cover" href="{{url}}" title="{{title}}">
        {{#if image}}
        <img class="img" src="{{image}}" alt="{{title}}" />
        {{else}}
        <img class="img" src="{{asset "images/cover_default.jpg"}}" alt="{{title}}" />
        {{/if}}
      </a>
      {{!-- Imagen del autor --}}
      {{#author}}
        <a class="post-autor" href="{{url}}" title="{{name}}">
          <figure class="autor-img">
            {{#if image}}
              <img class="autor-foto" src="{{image}}" alt="{{name}}'s Picture"/>
            {{/if}}
            <figcaption><small class="hidden">{{name}}</small></figcaption>
          </figure>
        </a>
      {{/author}} 
    </header>
    <section class="post-contenido">
      <a class="post-vinculo" href="{{url}}">
        <h2 class="post-titulo">
          {{title}}
        </h2>
      </a>
      <p class="excerpt">{{excerpt words="20"}}[...]</p>
    </section>
    <footer class="post-footer flex-sb-wrap">
      <time class="flex-center" datetime="{{date format="YYYY-MM-DD"}}">
        <span class="icon-clock"></span>&nbsp;<small>{{date published_at timeago="true"}}</small>
      </time>
      {{#if tags}}
        <ul class="tags no-list">
          {{#foreach tags limit="2"}}
            <li>
              <a href="{{url}}" title="{{name}}" class="tag-{{slug}}">{{name}}</a>
            </li>
          {{/foreach}}
        </ul>
      {{/if}}
    </footer>
  {{/if}}
  </article>
{{/foreach}}
</section>
