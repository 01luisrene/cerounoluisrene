<!-- Footer -->
<footer class="site-footer">
  <div class="wrapper">
    <div class="footer-col-wrapper">
      <div class="footer-col footer-col-1">
        <ul class="contact-list">
          <li><span class="footer-name-app">{{@blog.title}}</span></li>
          <div class="separador"></div>
        </ul>
        <img src="{{asset "images/logo.png"}}" alt="01luisrene.com" title="Logo" style="display: block; margin: 0 auto;" width="100">
      </div>

      <div class="footer-col footer-col-2">
        <span class="footer-title">Redes Sociales</span>
        <ul class="social-media-list">
          {{#if @blog.twitter}}
          <li>
            <i class="fa fa-twitter" aria-hidden="true"></i> <a href="{{twitter_url @blog.twitter}}" target="_blank">Twitter</a>
          </li>
          {{/if}}
          {{#if @blog.facebook}}
          <li>
          <i class="fa fa-facebook" aria-hidden="true"></i> <a href="{{facebook_url @blog.facebook}}" target="_blank">Facebook</a>
          </li>
          {{/if}}
          <li>
          <i class="fa fa-github" aria-hidden="true"></i> <a href="https://www.github.com/01luisrene" target="_blank">GitHub</a>
          </li>
          <li>
          <i  class="fa fa-google-plus" aria-hidden="true"></i> <a href="https://plus.google.com/u/0/+01LuisRene" target="_blank">Google Plus</a>
          </li>
        </ul>
      </div>
      <div class="footer-col footer-col-3">
        <span class="footer-title">Suscribete a {{@blog.title}}</span>
        {{subscribe_form}}
        <span class="gh-subscribe-rss">O suscríbase <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">vía RSS</a> con Feedly!</span>
      </div>
    </div>
      <!-- div para copy -->
      <div class="footer-col copy">
        <p class="copy-parrafo"><a href="{{@blog.url}}"><b>{{@blog.title}}</b></a> &copy; {{date format="YYYY"}}</a>
        </p>
      </div>
  </div>
</footer>
