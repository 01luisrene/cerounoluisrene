{{!< default}}
{{#post}}
<!-- Header principal -->
<header class="main-header post-head {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    {{!-- Links de Navegación del Blog --}}
    {{navigation}}
</header>
<main class="main" role="main">
<div class="contenedor___post">
    <article class="{{post_class}}">
        <header>
            <h1 class="post-titulo">{{title}}</h1>
            <section class="post-meta">
                <i class="fa fa-calendar-o"></i>
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time> 
                {{#if tags}}
                <ul class="post-lista-tags">
                {{#foreach tags limit="5"}}
                  <li>
                    <a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
                  </li>  
                {{/foreach}}
                </ul>
                {{/if}}
            </section>
        </header>
        <section class="post_contenido">
            <div class="addthis_sharing_toolbox compartir-redes-sociales"></div>
            {{content}}
            <!--Publicidad-->
            <div align="center">
            <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
            <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-3311622925293570"
                     data-ad-slot="2571465647"
                     data-ad-format="auto"></ins>
            <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
            </div>
            <h3 class="titulo-compartir">Te gusto este artículo, ayudame compartiéndolo&nbsp;:)</h3>
            <div class="addthis_sharing_toolbox"></div>
        </section>
        <footer class="post-footer">
        {{!-- Everything inside the #author tags pulls data from the author --}}
        {{#author}}

            {{#if image}}
            <figure class="autor-imagen">
                <a class="img" href="{{url}}" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></a>
            </figure>
            {{/if}}

            <section class="autor">
                <h4 class="autor-nombre"><a href="{{url}}">{{name}}</a></h4>

                {{#if bio}}
                    <p class="autor-bio">{{bio}}</p>
                {{else}}
                    <p class="autor-mas-post">Leer <a href="{{url}}">más posts</a> de este autor.</p>
                {{/if}}
                <div class="autor-meta">
                    {{#if location}}
                      <span class="autor-ubicacion fa fa-map-marker">
                        {{location}}
                      </span>
                    {{/if}}
                    {{#if website}}
                      <span class="autor-web fa fa-globe">
                        <a href="{{website}}" target="_blank"> {{website}}</a>
                      </span>
                    {{/if}}
                    {{#if twitter}}
                      <span class="autor-twitter fa fa-twitter">
                        <a href="{{twitter_url}}" target="_blank"> {{twitter}}</a>
                      </span>
                    {{/if}}
                    {{#if facebook}}
                      <span class="autor-facebook fa fa-facebook">
                        <a href="{{facebook_url}}" target="_blank"> {{@blog.facebook}}</a>
                      </span>
                    {{/if}}
                </div>
            </section>

        {{/author}}

        {{!-- Email subscribe form at the bottom of the page --}}
        {{#if @labs.subscribers}}
        <section class="gh-subscribe">
            <h3 class="gh-subscribe-title">Únete a mí Blog</h3>
            <p>Obtén los últimos artículos publicados directamente en tu bandeja de entrada.</p>
            {{subscribe_form placeholder="Your email address"}}
            <span class="gh-subscribe-rss">O suscríbase <a href="http://cloud.feedly.com/#subscription/feed/{{@blog.url}}/rss/">vía RSS</a> con Feedly!</span>
        </section>
        {{/if}}
        </footer>
        {{!-- Links to Previous/Next posts --}}
        <aside class="read-next">
            {{#next_post}}
            <a class="read-next-story next {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
                <h4 class="read-next-title">{{title}}</h4>
                <p class="read-next-parrafo">{{excerpt words="12"}}&hellip;</p>
            </a>
            {{else}}
            <span class="read-next-story disabled">
                <button class="btn btn-read-next">« Siguiente</button>
                <p class="read-next-parrafo">No hay más posts</p>
            </span>
            {{/next_post}}

            {{#prev_post}}
            <a class="read-next-story prev {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
                <h4 class="read-next-title">{{title}}</h4>
                <p class="read-next-parrafo">{{excerpt words="12"}}&hellip;</p>
            </a>
            {{else}}
            <span class="read-next-story disabled">
                <button class="btn btn-read-next">Anterior »</button>
                <p class="read-next-parrafo">No hay más posts</p>
            </span>
            {{/prev_post}}
        </aside>
        <!--Formulario de Comentarios-->
        <section>
            <h2>Comparte tu Opinión</h2>
            <div id="disqus_thread"></div>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
        </section>
    </article>
    {{> "aside"}}
</div>
</main>
{{/post}}
